<UserControl xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             x:Class="Pip.UI.Components.Investments.InvestmentForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:investments="clr-namespace:Pip.UI.Components.Investments"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type investments:InvestmentItemViewModel}}"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <dxlc:DataLayoutControl
            AutoGenerateItems="False"
            Orientation="Vertical"
            CurrentItem="{Binding Mode=OneWay}">
            <dxlc:LayoutGroup View="GroupBox" IsCollapsible="True" Header="Treasury items" Orientation="Vertical">
                <dxlc:LayoutItem Label="Issue Date" AddColonToLabel="True">
                    <dxe:DateEdit EditValue="{Binding IssueDate, Mode=TwoWay}" />
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Par" AddColonToLabel="True">
                    <dxe:SpinEdit EditValue="{Binding Par, Mode=TwoWay}" MaskType="Numeric" Mask="c" DisplayFormatString="c" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
        </dxlc:DataLayoutControl>
    </Grid>
</UserControl>