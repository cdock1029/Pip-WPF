<UserControl x:Class="Pip.UI.Components.Search.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:model="clr-namespace:Pip.Model;assembly=Pip.Model"
             xmlns:search="clr-namespace:Pip.UI.Components.Search"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=search:SearchViewModel}"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="SearchViewControl">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type model:Treasury}">
            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Cusip: {0}, Issue Date: {1}">
                            <Binding Path="Cusip" />
                            <Binding Path="IssueDate" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label>Treasury Search</Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label VerticalContentAlignment="Center">Enter CUSIP:</Label>
            <TextBox Grid.Column="1"
                     Margin="10 0"
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="250">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SearchCommand}" CommandParameter="{Binding SearchText}"
                                Key="Return" />
                </TextBox.InputBindings>
            </TextBox>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Margin="0 0 10 0" Content="Search" Command="{Binding SearchCommand}"
                        CommandParameter="{Binding SearchText}" />
                <Button Margin="0 0 10 0" Content="Clear" Command="{Binding ClearResultsCommand}" />
            </StackPanel>
        </Grid>
        <ListView HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Margin="0,20,0,0"
                  ItemsSource="{Binding SearchResults}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Save"
                              Command="{Binding SaveTreasuryCommand}"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItem}" />
                    <MenuItem Header="Create investment"
                              Command="{Binding CreateInvestmentCommand}"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}, Path=PlacementTarget.SelectedItem}" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.Resources>
                <system:String xml:space="preserve" x:Key="MaturityFormat">Maturity: {0:ddd d MMM yyyy}</system:String>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="20,10">
                        <StackPanel Width="360"
                                    Height="90"
                                    Orientation="Horizontal">
                            <ContentPresenter Width="50"
                                              Height="50"
                                              Margin="0,0,8,0"
                                              Content="{Binding Type}" />
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock
                                    Margin="10,0,0,0"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="{Binding Cusip}" AutomationProperties.HeadingLevel="Level3" />
                                <TextBlock
                                    Width="240"
                                    Margin="10,0,0,0"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" Opacity="0.7"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{Binding IssueDate,StringFormat='Issued: {0:ddd d MMM yyyy}'}" />

                                <TextBlock
                                    Margin="10,0,0,0"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" Opacity="0.7"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{Binding MaturityDate, StringFormat={StaticResource MaturityFormat}}" />
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
