<Window x:Class="Pip.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModel="clr-namespace:Pip.UI.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow"
        Height="800" Width="800"
        FontSize="16">

    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="14">
            <MenuItem Header="_File">
                <MenuItem Header="_Quit">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction MethodName="Close"
                                                TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_About" />
        </Menu>

        <!-- ToolBar -->
        <DockPanel DockPanel.Dock="Top">
            <ToolBarTray DockPanel.Dock="Left">
                <ToolBar>
                    <Button Content="Search" Margin="0, 0, 5, 0" Command="{Binding NavigateSearchCommand}" />
                    <Button Content="Saved Treasuries" Margin="0, 0, 5, 0" Command="{Binding NavigateSavedCommand}" />
                    <Button Content="Upcoming Auctions" Margin="0, 0, 5, 0" Command="{Binding NavigateUpcomingCommand}" />
                    <Button Content="Auctions" Margin="0, 0, 5, 0" Command="{Binding NavigateAuctionsCommand}" />
                </ToolBar>
            </ToolBarTray>
        </DockPanel>

        <!-- StatusBar -->
        <StatusBar DockPanel.Dock="Bottom">
            <Label>Pip a rino</Label>
        </StatusBar>

        <!-- Content -->
        <ContentControl Margin="20" Content="{Binding Navigation.CurrentView}" />
    </DockPanel>
</Window>
