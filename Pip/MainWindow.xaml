<dx:ThemedWindow
    x:Class="Pip.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Pip.UI.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
    SizeToContent="Manual"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <DockPanel dxb:BarManager.ToolbarGlyphSize="Large" LastChildFill="True">
        <dxb:BarContainerControl
            ContainerType="Top"
            DockPanel.Dock="Top"
            RenderOptions.BitmapScalingMode="HighQuality">
            <dxb:MainMenuControl Caption="Main Menu">
                <dxb:BarSubItem Content="_File">
                    <dxb:BarButtonItem Content="_Quit" Glyph="{dx:DXImage Images/Actions/Close_32x32.png}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="ItemClick">
                                <b:CallMethodAction MethodName="Close"
                                                    TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </dxb:BarButtonItem>
                </dxb:BarSubItem>
                <dxb:BarSubItem Content="_About" />
            </dxb:MainMenuControl>
            <dxb:ToolBarControl BarItemDisplayMode="ContentAndGlyph" Caption="Navigation">
                <dxb:BarButtonItem
                    Margin="0,0,5,0"
                    Command="{Binding NavigateSearchCommand}"
                    Content="Search"
                    Glyph="{dx:DXImage Images/Find/Find_32x32.png}" />
                <dxb:BarButtonItem
                    Margin="0,0,5,0"
                    Command="{Binding NavigateSavedCommand}"
                    Content="Saved Treasuries"
                    Glyph="{dx:DXImage Images/XAF/Action_SaveScript_32x32.png}" />
                <dxb:BarButtonItem
                    Margin="0,0,5,0"
                    Command="{Binding NavigateInvestmentsCommand}"
                    Content="Investments"
                    Glyph="{dx:DXImage Images/Function Library/Financial_32x32.png}" />
                <dxb:BarButtonItem
                    Margin="0,0,5,0"
                    Command="{Binding NavigateAuctionsCommand}"
                    Content="Auctions"
                    Glyph="{dx:DXImage Images/Business Objects/BOSale_32x32.png}" />
            </dxb:ToolBarControl>
        </dxb:BarContainerControl>
        <dxb:StatusBarControl Caption="Status bar" DockPanel.Dock="Bottom">
            <dxb:BarStaticItem Content="Pip a rino" ShowBorder="False" />
        </dxb:StatusBarControl>

        <DockPanel LastChildFill="True">
            <dxb:BarContainerControl
                ContainerType="Left"
                DockPanel.Dock="Left"
                Orientation="Vertical" />
            <dxb:BarContainerControl
                ContainerType="Right"
                DockPanel.Dock="Right"
                Orientation="Vertical" />
            <ContentControl Margin="10" Content="{Binding Navigation.CurrentView}" />
        </DockPanel>
    </DockPanel>
</dx:ThemedWindow>
