<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Pip.UI.ViewModel"
    xmlns:search="clr-namespace:Pip.UI.Components.Search"
    xmlns:auctions="clr-namespace:Pip.UI.Components.Auctions"
    xmlns:investments="clr-namespace:Pip.UI.Components.Investments"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    x:Class="Pip.UI.MainWindow"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type={x:Type viewModel:MainViewModel}}"
    SizeToContent="Manual"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <dx:ThemedWindow.Resources>
        <DataTemplate DataType="{x:Type search:SearchViewModel}">
            <search:SearchView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type auctions:AuctionsViewModel}">
            <auctions:AuctionsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type investments:InvestmentsViewModel}">
            <investments:InvestmentsView />
        </DataTemplate>
    </dx:ThemedWindow.Resources>

    <dx:ThemedWindow.ToolbarItems>
        <dxb:MainMenuControl VerticalAlignment="Center">
            <dxb:BarSubItem Content="_File">
                <dxb:BarButtonItem Content="_Quit" Glyph="{dx:DXImage SvgImages/XAF/Action_Close.svg}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="ItemClick">
                            <b:CallMethodAction MethodName="Close"
                                                TargetObject="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </dxb:BarButtonItem>
            </dxb:BarSubItem>
            <dxb:BarSubItem Content="_About" />
        </dxb:MainMenuControl>
    </dx:ThemedWindow.ToolbarItems>

    <dxdo:DockLayoutManager ClosedPanelsBarVisibility="Auto">
        <dxdo:LayoutGroup Caption="LayoutRoot">
            <dxdo:LayoutGroup Orientation="Vertical" ItemWidth="250">
                <dxdo:LayoutPanel dxdo:AutoHideGroup.AutoHideType="Left" Caption="Search">
                    <ContentControl Content="{Binding SearchViewModel}" />
                </dxdo:LayoutPanel>
                <dxdo:LayoutPanel dxdo:AutoHideGroup.AutoHideType="Left" Caption="Details" />
            </dxdo:LayoutGroup>
            <dxdo:LayoutPanel Caption="Investments" ItemWidth="*">
                <ContentControl Content="{Binding InvestmentsViewModel}" />
            </dxdo:LayoutPanel>
            <dxdo:LayoutPanel ItemWidth="*" Caption="Auctions">
                <ContentControl Content="{Binding AuctionsViewModel}" />
            </dxdo:LayoutPanel>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>


