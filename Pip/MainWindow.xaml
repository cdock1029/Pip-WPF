<dx:ThemedWindow x:Class="Pip.UI.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                 xmlns:viewModel="clr-namespace:Pip.UI.ViewModel"
                 xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
                 Title="MainWindow"
                 Width="800" Height="800"
                 WindowStartupLocation="Manual"
                 SizeToContent="Manual">

    <DockPanel LastChildFill="True" dxb:BarManager.ToolbarGlyphSize="Medium">
        <dxb:BarContainerControl DockPanel.Dock="Top" ContainerType="Top">
            <dxb:MainMenuControl Caption="Main Menu">
                <dxb:BarSubItem Content="_File">
                    <dxb:BarButtonItem Content="_Quit" Glyph="{dx:DXImage Images/Actions/Close_32x32.png}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="ItemClick">
                                <b:CallMethodAction MethodName="Close"
                                                    TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>

                    </dxb:BarButtonItem>
                </dxb:BarSubItem>
                <dxb:BarSubItem Content="_About" />
            </dxb:MainMenuControl>
            <dxb:ToolBarControl Caption="Navigation" BarItemDisplayMode="ContentAndGlyph">
                <dxb:BarButtonItem Content="Search" Margin="0, 0, 5, 0" Command="{Binding NavigateSearchCommand}"
                                   Glyph="{dx:DXImage Images/Find/Find_32x32.png}" />
                <dxb:BarButtonItem Content="Saved Treasuries" Margin="0, 0, 5, 0"
                                   Command="{Binding NavigateSavedCommand}"
                                   Glyph="{dx:DXImage Images/XAF/Action_SaveScript_32x32.png}" />
                <dxb:BarButtonItem Content="Investments" Margin="0, 0, 5, 0"
                                   Command="{Binding NavigateInvestmentsCommand}"
                                   Glyph="{dx:DXImage Images/Function Library/Financial_32x32.png}" />
                <dxb:BarButtonItem Content="Auctions" Margin="0, 0, 5, 0" Command="{Binding NavigateAuctionsCommand}"
                                   Glyph="{dx:DXImage Images/Business Objects/BOSale_32x32.png}" />
            </dxb:ToolBarControl>
        </dxb:BarContainerControl>
        <dxb:StatusBarControl DockPanel.Dock="Bottom" Caption="Status bar">
            <dxb:BarStaticItem Content="Pip a rino" ShowBorder="False" />
        </dxb:StatusBarControl>

        <DockPanel LastChildFill="True">
            <dxb:BarContainerControl DockPanel.Dock="Left" Orientation="Vertical" ContainerType="Left" />
            <dxb:BarContainerControl DockPanel.Dock="Right" Orientation="Vertical" ContainerType="Right" />
            <ContentControl Content="{Binding Navigation.CurrentView}" Margin="10" />
        </DockPanel>
    </DockPanel>
</dx:ThemedWindow>
