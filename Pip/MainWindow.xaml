<Window x:Class="Pip.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModel="clr-namespace:Pip.UI.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
        Title="MainWindow"
        Width="800" Height="800"
        WindowStartupLocation="Manual"
        SizeToContent="Manual" FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Quit">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction MethodName="Close"
                                                TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_About" />
        </Menu>
        <ToolBarTray Grid.Row="1">
            <ToolBar>
                <Button Content="Search" Margin="0, 0, 5, 0" Command="{Binding NavigateSearchCommand}" />
                <Button Content="Saved Treasuries" Margin="0, 0, 5, 0"
                        Command="{Binding NavigateSavedCommand}" />
                <Button Content="Upcoming Auctions" Margin="0, 0, 5, 0"
                        Command="{Binding NavigateUpcomingCommand}" />
                <Button Content="Auctions" Margin="0, 0, 5, 0" Command="{Binding NavigateAuctionsCommand}" />
            </ToolBar>
        </ToolBarTray>
        <DockPanel Grid.Row="2">
            <DockPanel LastChildFill="False">
                <ContentControl DockPanel.Dock="Right" Content="{Binding UpcomingAuctionsViewModel}" Margin="10" />
                <ContentControl DockPanel.Dock="Right" Content="{Binding AuctionsViewModel}" Margin="10" />
                <ContentControl DockPanel.Dock="Right" Content="{Binding SavedTreasuriesViewModel}" Margin="10" />
                <ContentControl DockPanel.Dock="Right" Content="{Binding SearchViewModel}" Margin="10" />
            </DockPanel>
        </DockPanel>
        <StatusBar Grid.Row="3">
            <Label>Pip a rino</Label>
        </StatusBar>
    </Grid>
</Window>
