<Window x:Class="Pip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Pip.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:view="clr-namespace:Pip.View"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:TreasuriesViewModel}"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Quit">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction MethodName="Close"
                                                TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_About" />
        </Menu>

        <!-- Toolbar -->
        <DockPanel Grid.Row="1">
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Content="Search" />
                    <Button Content="Saved" />
                    <Button Content="Announced" />
                    <Button Content="Auctions" />
                </ToolBar>
            </ToolBarTray>
        </DockPanel>

        <!-- Content -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Treasuries list -->
            <ListView Grid.Column="0"
                      Width="260"
                      SelectedItem="{Binding SelectedTreasury}"
                      ItemsSource="{Binding Treasuries}" DisplayMemberPath="Cusip"
                      d:ItemsSource="{d:SampleData ItemCount=5}" />

            <UniformGrid Grid.Column="1" Margin="10 0" Rows="3" Columns="1">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label FontWeight="SemiBold" Margin="0 0 5 0">Cusip:</Label>
                    <TextBlock Text="{Binding SelectedTreasury.Cusip, FallbackValue=''}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label FontWeight="SemiBold" Margin="0 0 5 0">Issue Date:</Label>
                    <TextBlock Text="{Binding SelectedTreasury.IssueDate, FallbackValue=''}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label FontWeight="SemiBold" Margin="0 0 5 0">Maturity Date:</Label>
                    <TextBlock Text="{Binding SelectedTreasury.MaturityDate, FallbackValue=''}" />
                </StackPanel>
            </UniformGrid>

            <view:SavedPage Grid.Column="2" />
        </Grid>

        <StatusBar Grid.Row="3">
            <Label>Pip a rino</Label>
        </StatusBar>
    </Grid>
</Window>