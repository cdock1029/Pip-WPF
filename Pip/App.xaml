<Application x:Class="Pip.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary
                    Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />-->
                <ResourceDictionary Source="/Resources/Converters.xaml" />
                <ResourceDictionary Source="/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Optionally, apply to all Panels (Grid, StackPanel, etc.) -->
            <Style TargetType="{x:Type Panel}" BasedOn="{StaticResource {x:Type Panel}}">
                <Setter Property="UseLayoutRounding" Value="True" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
            </Style>
            <!-- Apply to all Windows -->
            <Style TargetType="dx:ThemedWindow" BasedOn="{StaticResource {x:Type dx:ThemedWindow}}">
                <Setter Property="UseLayoutRounding" Value="True" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="UseGlowColors" Value="True" />
                <Setter Property="ActiveGlowColor" Value="{x:Static SystemColors.AccentColorBrush}" />
            </Style>


        </ResourceDictionary>

    </Application.Resources>
</Application>