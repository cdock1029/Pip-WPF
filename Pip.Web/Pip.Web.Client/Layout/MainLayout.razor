@inherits LayoutComponentBase

<TelerikRootComponent>

<FluentLayout>
    <FluentHeader>
        TreasuryDirector
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu @rendermode="InteractiveWebAssembly"/>
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
            <FluentToastProvider @rendermode="InteractiveWebAssembly" MaxToastCount="10"/>
            <FluentDialogProvider @rendermode="InteractiveWebAssembly"/>
            <FluentTooltipProvider @rendermode="InteractiveWebAssembly"/>
            <FluentMessageBarProvider @rendermode="InteractiveWebAssembly"/>
            <FluentMenuProvider @rendermode="InteractiveWebAssembly"/>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer/>
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

</TelerikRootComponent>