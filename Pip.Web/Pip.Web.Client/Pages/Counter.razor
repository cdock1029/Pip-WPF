@page "/counter"
@inject IToastService ToastService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<div role="status" style="padding-bottom: 1em;">
    Current count: <FluentBadge Appearance="Appearance.Neutral">@_currentCount</FluentBadge>
</div>

<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>

<FluentButton Class="mt-8" Appearance="Appearance.Accent" @onclick="ShowToast">Toast</FluentButton>

@code {
    private int _currentCount;

    private void IncrementCount()
    {
        _currentCount++;
    }

    private void ShowToast()
    {
        ToastService.ShowInfo($"Counter {_currentCount}");
    }

}